---
layout: page
---

<div class="post">
  <article>
    {% if page.profiles %}
      {% assign groups = page.profiles | map: 'group' | uniq %}
      {% for group in groups %}
        {% assign group_profiles = page.profiles | where: 'group', group %}
        {% if group == 'Group Leader' or group == 'Post-Doc Researchers' or group == 'PhD Students' or group == 'MSc Students' or group == 'Undergraduate Students' or group == 'Alumni' %}
          <h2>{{ group }}</h2>
          {% for profile in group_profiles %}
            <hr>
            <div style="display: flex; align-items: center; gap: 20px;"> <!-- Flex container for profile -->
              
              <!-- Profile Image -->
              {% if profile.image %}
                <div class="profile-image" style="flex-shrink: 0;">
                  {% assign profile_image_path = profile.image | prepend: 'assets/img/' %}
                  {% if profile.image_circular %}
                    {% assign profile_image_class = 'img-fluid z-depth-1 rounded-circle' %}
                  {% else %}
                    {% assign profile_image_class = 'img-fluid z-depth-1 rounded' %}
                  {% endif %}
                  {% capture sizes %}(min-width: {{site.max_width}}) {{ site.max_width | minus: 30 | times: 0.3}}px, (min-width: 576px) 30vw, 95vw{% endcapture %}
                  {% include figure.liquid loading="eager" path=profile_image_path class=profile_image_class sizes=sizes alt=profile.image %}
                </div>
              {% endif %}
              
              <!-- Profile Info and Contact -->
              <div class="profile-info" style="flex-grow: 1;">
                {% if profile.name %}
                  <h3>{{ profile.name }}</h3>
                {% endif %}
                {% if profile.bio %}
                  <p>{{ profile.bio }}</p>
                {% endif %}
                <div class="contact-info">
                  {% if profile.email %}
                    <a href="mailto:{{ profile.email }}" title="Email"><i class="fa-solid fa-envelope"></i></a>
                  {% endif %}
                  {% if profile.website %}
                    <a href="{{ profile.website }}" title="Website"><i class="fa-solid fa-globe"></i></a>
                  {% endif %}
                  {% if profile.linkedin %}
                    <a href="https://www.linkedin.com/in/{{ profile.linkedin }}" title="LinkedIn"><i class="fa-brands fa-linkedin"></i></a>
                  {% endif %}
                  {% if profile.twitter %}
                    <a href="https://twitter.com/{{ profile.twitter }}" title="Twitter"><i class="fa-brands fa-twitter"></i></a>
                  {% endif %}
                  {% if profile.scholar_userid %}
                    <a href="https://scholar.google.com/citations?user={{ profile.scholar_userid }}" title="Google Scholar"><i class="ai ai-google-scholar"></i></a>
                  {% endif %}
                  <!-- Add more contact information fields as needed -->
                </div>
              </div>
            </div>
          {% endfor %}
        {% endif %}
      {% endfor %}
    {% endif %}
  </article>
</div>
